{% extends model('component') %}

{% define config = {
    name: 'comment-thread',
} %}

{% define data = {
    commentThread: required,
    commentAvailableTags: required,
    returnUrl: required,
    idCustomer: required,
} %}

{% define attributes = {
    'name': required,
} %}

{% block body %}
    {% for comment in data.commentThread %}
        {% include molecule('comment', 'CommentWidget') with {
            class: 'spacing-bottom spacing-bottom--medium',
            data: {
                comment: comment,
                commentAvailableTags: data.commentAvailableTags,
                returnUrl: data.returnUrl,
                idCustomer: data.idCustomer,
            },
        } only %}
    {% endfor %}
{% endblock %}
